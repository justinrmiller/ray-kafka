FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    netcat-openbsd \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml ./

# Install uv
RUN pip install --no-cache-dir uv

# Install dependencies (packaging is required for Ray 2.9.0)
RUN uv pip install --system \
    "ray[data]==2.53.0" \
    "kafka-python>=2.0.2" \
    "pytest==9.0.2" \
    "pytest-mock==3.15.1"

# Copy application code
COPY src/ src/
COPY tests/ tests/
COPY integration_tests.py .

# Default command
CMD ["pytest", "tests/", "-v"]
